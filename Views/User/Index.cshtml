@model List<HandOnModelValidations.Models.User>
@{
    ViewBag.Title = "Index";
}

<div class="container">
	<a href="http://localhost:57624/User/Create">Create New</a>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th><th>Name</th><th>Age</th><th>Country</th><th>Email</th><th>Mobile</th>
            </tr>
        </thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.Id</td>
					<td>@item.Name</td>
					<td>@item.Age</td>
					<td>@item.Country</td>
					<td>@item.Email</td>
					<td>@item.Mobile</td>
				</tr>
			}
		</tbody>
    </table> 
</div>

